@model ForgotPasswordVM

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container">
    <nav class="breadcrumb-nav has-border">
        <div class="container">
            <ul class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                <li>ForgotPassword</li>

            </ul>
        </div>
    </nav>
    <div class="row d-flex justify-content-center ">
        <div class="input-area my-5">
            <h3 style="text-align:center">Forgot password</h3>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" enctype="multipart/form-data">
                <div class="mb-3 forgotpassword my-5">
                    
                    <input placeholder="Email" class="form-control" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="register-btn d-flex justify-content-center">
                    <button type="submit" style="background-color:black; color:white;" class="btn btn-primary">Send</button>
                </div>

            </form>
        </div>
    </div>


</div>    

