@model ProductDetail
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card">
        <div class="card-header">
            ProductDetail detail
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        HeaderTitle
                    </th><th>
                        HeaderDescription
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="~/assets/images/products/@Model.Image" style="width:200px; height:200px" alt="Alternate Text" />
                    </td>
                    <td>
                        @Html.Raw(Model.HeaderTitle)
                    </td>
                    <td>
                        @Html.Raw(Model.HeaderDescription)
                    </td>
                    <td>
                        @Html.Raw(Model.Title)
                    </td>
                    <td>
                        @Html.Raw(Model.Description)
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

