@model Social
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Social
                        </p>
                        <form asp-controller="Social" asp-action="Edit" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input type="text" class="form-control" asp-for="Name">
                                <span class="text-danger my-1" asp-validation-for="Name"></span>
                            </div>
                              <div class="form-group">
                                <label asp-for="Icon">Icon</label>
                                <input type="text" class="form-control" asp-for="Icon">
                                <span class="text-danger my-1" asp-validation-for="Icon"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Social" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <partial name="_ValidationPartial" />
}

