@model ResetPasswordVM

@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="input-area">
            <div class="text-danger mb-2" asp-validation-summary="All"></div>
            <h3 style="text-align:center">Forgot password</h3>
            <form asp-controller="Account" asp-action="ResetPassword" method="post" enctype="multipart/form-data">
                <div class="forgotpassword mb-3 my-5">
                    <input placeholder="Password" class="form-control" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="forgotpassword mb-3">
                    <input placeholder="ConfirmPassword" class="form-control" asp-for="ConfirmPassword">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="register-btn d-flex justify-content-center" style="width: 100%;">
                    <button type="submit" style="background-color:black; color: white;" class="btn btn-primary">Send</button>
                </div>
                <input type="hidden" asp-for="Token" value="@Model.Token" />
                <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            </form>
        </div>
    </div>


</div>

