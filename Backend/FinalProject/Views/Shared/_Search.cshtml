@model List<Product>

    @foreach (var item in Model)
{
    <li class="search-nameli" >
        <a style="color:gray !important; " asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id">
            <img src="~/assets/images/products/@item.ProductImages.FirstOrDefault(m=>m.IsMain).Image" alt="banner" width="100" height="100">
            @item.Name @item.Price$
        </a>
    </li>
}
